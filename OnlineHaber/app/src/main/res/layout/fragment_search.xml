<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:background="@drawable/baslik" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="25dp"
            android:orientation="vertical"
            tools:context=".ui.search.SearchFragment">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/searc"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="50dp"
                        android:gravity="center_vertical"
                        android:background="@drawable/corneredittex"
                        android:drawableStart="@drawable/search_coy"
                        android:hint="  Ara"



                        android:textSize="18dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="37dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/corneredittex"
                        android:gravity="center"
                        android:id="@+id/searchTextView"

                        android:textColor="#3a84db"
                        android:textSize="14sp"
                        android:textStyle="bold" />


                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="İçerikte Ara"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/contentSearchEdittext"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="17sp"
                    android:background="@drawable/corneredittex"
                    android:drawableEnd="@drawable/search_coy"
                    android:hint="  Ara"
                    android:paddingStart="1dp"
                    android:paddingLeft="15dp"

                    android:paddingRight="15dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/line"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Başlıklarda Ara"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/hoodSearchEdittext"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="17sp"
                    android:background="@drawable/corneredittex"
                    android:drawableEnd="@drawable/search_coy"
                    android:drawablePadding="5dp"
                    android:hint="  Ara"
                    android:paddingStart="1dp"

                    android:paddingLeft="15dp"

                    android:paddingRight="15dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/line"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Tarih Aralığı"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17sp">

                    <Button
                        android:id="@+id/dateOne"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight=".50"
                        android:background="@drawable/cornerbutton"
                        android:drawableEnd="@drawable/calendar_2"

                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="..."

                        android:textColor="#b4b3b3" />

                    <Button
                        android:id="@+id/dateTwo"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight=".50"
                        android:background="@drawable/cornerbutton"
                        android:drawableEnd="@drawable/calendar_2"

                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="..."

                        android:textColor="#b4b3b3" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/line"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="15dp"
                    android:text="Dil"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="17sp"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.5">


                            <ImageView

                                android:id="@+id/turkish"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:background="@drawable/turkey_copy" />


                            <ImageView
                                android:id="@+id/languegeTurkeySelect"
                                android:layout_width="17sp"
                                android:layout_height="17sp"
                                android:layout_marginLeft="-15dp"
                                android:layout_toRightOf="@+id/languegeTurkeySelect"
                                android:background="@drawable/aaa"
                                android:buttonTint="#3a84db"
                                android:gravity="center"
                                android:text="" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.5">

                            <ImageView

                                android:id="@+id/germany"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="8dp"

                                android:background="@drawable/germany_copy"
                                android:scaleType="center" />


                            <ImageView
                                android:id="@+id/languegeGermanySelect"
                                android:layout_width="17sp"
                                android:layout_height="17sp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginLeft="-15dp"
                                android:background="@drawable/aaa"
                                android:buttonTint="#3a84db"
                                android:gravity="center"
                                android:text="" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.5">


                            <ImageView

                                android:id="@+id/ABD"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"


                                android:background="@drawable/flag_copy"
                                android:scaleType="center" />


                            <ImageView
                                android:id="@+id/languegeABDSelect"
                                android:layout_width="17sp"
                                android:layout_height="17sp"
                                android:layout_marginLeft="-15dp"
                                android:background="@drawable/aaa"
                                android:buttonTint="#3a84db"
                                android:gravity="center"
                                android:text="" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".7">


                            <ImageView

                                android:id="@+id/spanish"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"


                                android:background="@drawable/spain_copy"
                                android:scaleType="center" />


                            <ImageView
                                android:id="@+id/languegeSpainSelect"
                                android:layout_width="17sp"
                                android:layout_height="17sp"
                                android:layout_marginLeft="-15dp"
                                android:background="@drawable/aaa"
                                android:buttonTint="#3a84db"
                                android:gravity="center"
                                android:text="" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="27dp"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.5">


                            <ImageView

                                android:id="@+id/england"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:background="@drawable/uk_copy" />


                            <CheckBox
                                android:id="@+id/languegeEnglandSelect"
                                android:layout_width="17sp"
                                android:layout_height="17sp"
                                android:layout_marginLeft="-15dp"
                                android:background="@drawable/aaa"
                                android:buttonTint="#3a84db"
                                android:gravity="center"
                                android:text="" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3.7">

                            <ImageView

                                android:id="@+id/frence"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="8dp"

                                android:background="@drawable/france_copy"
                                android:scaleType="center" />


                            <ImageView
                                android:id="@+id/languegeFranceSelect"
                                android:layout_width="17sp"
                                android:layout_height="17sp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginLeft="-15dp"
                                android:layout_toRightOf="@+id/alman"
                                android:background="@drawable/aaa"
                                android:buttonTint="#3a84db"
                                android:gravity="center"
                                android:text="" />
                        </LinearLayout>


                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/line"
                        android:textSize="16sp"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="15dp"
                        android:text="İçerik(Ülke)"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="17sp"
                            android:orientation="horizontal">


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.5">


                                <ImageView

                                    android:id="@+id/turkishCountry"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:background="@drawable/turkey_copy" />


                                <ImageView
                                    android:id="@+id/countryTurkeySelect"
                                    android:layout_width="17sp"
                                    android:layout_height="17sp"
                                    android:layout_marginLeft="-15dp"
                                    android:background="@drawable/aaa"
                                    android:buttonTint="#3a84db"
                                    android:gravity="center"
                                    android:text="" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.5">

                                <ImageView

                                    android:id="@+id/germanyCountry"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="8dp"

                                    android:background="@drawable/germany_copy"
                                    android:scaleType="center" />


                                <ImageView
                                    android:id="@+id/countryGermanySelect"
                                    android:layout_width="17sp"
                                    android:layout_height="17sp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginLeft="-15dp"
                                    android:layout_toRightOf="@+id/alman"
                                    android:background="@drawable/aaa"
                                    android:buttonTint="#3a84db"
                                    android:gravity="center"
                                    android:text="" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.5">


                                <ImageView

                                    android:id="@+id/ABDCountry"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"


                                    android:background="@drawable/flag_copy"
                                    android:scaleType="center" />


                                <ImageView
                                    android:id="@+id/countryABDSelect"
                                    android:layout_width="17sp"
                                    android:layout_height="17sp"
                                    android:layout_marginLeft="-15dp"
                                    android:background="@drawable/aaa"
                                    android:buttonTint="#3a84db"

                                    android:gravity="center"
                                    android:text="" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".7">


                                <ImageView

                                    android:id="@+id/spainCountry"
                                    android:layout_width="wrap_content"

                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"


                                    android:background="@drawable/spain_copy"
                                    android:scaleType="center" />


                                <ImageView
                                    android:id="@+id/countrySpainSelect"
                                    android:layout_width="17sp"
                                    android:layout_height="17sp"
                                    android:layout_marginLeft="-15dp"
                                    android:layout_toRightOf="@+id/icon"
                                    android:background="@drawable/aaa"
                                    android:buttonTint="#3a84db"
                                    android:gravity="center"
                                    android:text="" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="27dp"
                            android:orientation="horizontal">


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.5">


                                <ImageView

                                    android:id="@+id/englandCountry"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:background="@drawable/uk_copy" />


                                <ImageView
                                    android:id="@+id/countryEnglandSelect"
                                    android:layout_width="17sp"
                                    android:layout_height="17sp"
                                    android:layout_marginLeft="-15dp"
                                    android:layout_toRightOf="@+id/turkey"
                                    android:background="@drawable/aaa"
                                    android:buttonTint="#3a84db"
                                    android:gravity="center"
                                    android:text="" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3.7">

                                <ImageView

                                    android:id="@+id/frenceCountry"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="8dp"

                                    android:background="@drawable/france_copy"
                                    android:scaleType="center" />


                                <ImageView
                                    android:id="@+id/countryFrenceSelect"
                                    android:layout_width="17sp"
                                    android:layout_height="17sp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginLeft="-15dp"
                                    android:layout_toRightOf="@+id/alman"
                                    android:background="@drawable/aaa"
                                    android:buttonTint="#3a84db"
                                    android:gravity="center"
                                    android:text="" />
                            </LinearLayout>


                        </LinearLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/line"
                            android:textSize="16sp"
                            android:textStyle="normal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="17sp"

                            android:text="Sırala"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <Spinner
                            android:id="@+id/releaseDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:prompt="@string/spinner"></Spinner>

                        <Spinner
                            android:id="@+id/popularityAndSimilarityy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"></Spinner>

                        <Button
                            android:id="@+id/resultButton"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/cornerbuttontwo"
                            android:text="Sonuçları Getir"
                            android:textColor="#ffffff" />


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>